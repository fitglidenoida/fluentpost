# Production Environment Variables for FluentPost.in

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/fluentpost_prod"

# NextAuth Configuration
NEXTAUTH_URL="https://app.fluentpost.in"
NEXTAUTH_SECRET="your-super-secure-production-secret-key-here"

# OpenAI Configuration
OPENAI_API_KEY="your-openai-api-key"

# Social Media APIs
TWITTER_ACCESS_TOKEN="your-twitter-access-token"
TWITTER_ACCESS_TOKEN_SECRET="your-twitter-access-token-secret"
TWITTER_CONSUMER_KEY="your-twitter-consumer-key"
TWITTER_CONSUMER_SECRET="your-twitter-consumer-secret"

FACEBOOK_APP_ID="your-facebook-app-id"
FACEBOOK_APP_SECRET="your-facebook-app-secret"

INSTAGRAM_ACCESS_TOKEN="your-instagram-access-token"

# Email Configuration (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# CDN Configuration
CDN_URL="https://cdn.fluentpost.in"

# Analytics
GOOGLE_ANALYTICS_ID="your-ga4-id"

# Monitoring
SENTRY_DSN="your-sentry-dsn"

# Feature Flags
ENABLE_AI_GENERATION="true"
ENABLE_SOCIAL_POSTING="true"
ENABLE_ANALYTICS="true"

# Security
ENABLE_RATE_LIMITING="true"
ENABLE_SECURITY_AUDIT="true"
ENABLE_SSL_REDIRECT="true"

# Multi-tenancy
ENABLE_MULTI_TENANCY="true"
DEFAULT_TENANT="default"

# Performance
ENABLE_CACHING="true"
ENABLE_COMPRESSION="true"
